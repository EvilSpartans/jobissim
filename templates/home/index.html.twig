{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
<!-- Banner -->
<div class="banners mt-4 mb-5">
    {% for slider in sliders %}
    <section class="banner" style="background: url('../../uploads/images/{{ slider.image }}');">
        <div class="container">
            <div class="row">
                <div class="col-xl-7 col-lg-12 my-auto">
                    <div class="banner-content">
                        <h1>{{ slider.title }}</h1>
                        <div class="d-block d-lg-flex">
                            <ul class="list-inline meta">
                                <li class="list-inline-item"><i class="fad fa-calendar-week"></i>{{ slider.createdAt |
                                    date('d/m/y') }}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endfor %}
</div>
<!-- End Banner -->
{% if emplois | length > 0 %}
<!-- Trending Slider -->
<div class="row mb-4">
    <div class="col-md-6 my-auto">
        <h1>Emplois de la semaine</h1>
    </div>
    <div class="col-md-6 my-auto">
        <div class="text-right">
            <a class="viewtube-btn bordered no" href="{{ path('emploi') }}">Voir plus</a>
        </div>
    </div>
</div>
<!-- End Trending -->
<!-- List -->
<div class="row justify-content-center video-items" data-slick='{"slidesToShow": 3, "slidesToScroll": 1}'>
    {{ include('emploi/emploi.html.twig') }}
</div>
<!-- End List -->
{% endif %}
